<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/lo_10dpGrid"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/serverItemLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_lincor"
        android:orientation="horizontal"
        android:paddingTop="@dimen/lo_10dpGrid"
        android:paddingBottom="@dimen/lo_16dpGrid">

        <ImageView
            android:id="@+id/iconImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginStart="@dimen/lo_10dpGrid"
            android:src="@drawable/ic_flag_united_states"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="@dimen/lo_10dpGrid" />

        <TextView
            android:id="@+id/countryTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="united kingdom"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>